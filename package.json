{
  "name": "haircomb",
  "version": "0.1.0",
  "description": "A parser combinator DSL in typescript",
  "main": "dist/bundle.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json && rimraf ./dist/*.specs.* && rollup -c ./rollup.config.js",
    "lint": "tslint ./lib/*.ts",
    "test": "mocha --compilers ts:ts-node/register lib/*.specs.ts"
  },
  "author": "Etienne Maheu",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/xregexp": "^3.0.29",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.0",
    "rollup-plugin-local-resolve": "^1.0.7",
    "ts-node": "^6.1.0",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "xregexp": "^4.1.1"
  }
}
